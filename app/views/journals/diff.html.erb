<% if @journal.journalized_type === 'Checklist' %>
  <h2><%= @checklist.issue.tracker %> #<%= @checklist.issue.id %> - <%= @checklist.issue.subject %></h2>
  <h3><%= @checklist.tracker %> $<%= @checklist.id %> - <%= @checklist.subject %></h2>
  <p><%= authoring @journal.created_on, @journal.user, :label => :label_updated_time_by %></p>

  <pre class="text-diff"><%= @diff.to_html %></pre>

  <p>
    <%= link_to(l(:button_back), checklist_path(@checklist),
                :onclick => 'if (document.referrer != "") {history.back(); return false;}') %>
  </p>

  <% html_title "#{@checklist.tracker.name} $#{@checklist.id}: #{@checklist.subject}" %>
<% else %>
  <h2><%= @issue.tracker %> #<%= @issue.id %></h2>
  <p><%= authoring @journal.created_on, @journal.user, :label => :label_updated_time_by %></p>

  <pre class="text-diff"><%= @diff.to_html %></pre>

  <p>
    <%= link_to(l(:button_back), issue_path(@issue),
                :onclick => 'if (document.referrer != "") {history.back(); return false;}') %>
  </p>

  <% html_title "#{@issue.tracker.name} ##{@issue.id}: #{@issue.subject}" %>
<% end %>
