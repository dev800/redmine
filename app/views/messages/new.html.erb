<h2 class="content-title"><%= link_to @board.name, :controller => 'boards', :action => 'show', :project_id => @project, :id => @board %> &#187; <%= l(:label_message_new) %></h2>

<%= form_for @message, :url => {:action => 'new'}, :html => {:multipart => true, :id => 'message-form'} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p class="form-actions"><%= submit_tag l(:button_create) %></p>
<% end %>
